{
  "name": "kepinski-nextjs",
  "version": "1.0.0",
  "description": "Personal Website built with Next.js, React & styled-components",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start -p 8000",
    "test": "xo && stylelint './pages/**/*.js' && jest"
  },
  "main": "pages/index.js",
  "repository": "https://github.com/xxczaki/kepinski.me",
  "author": "Antoni Kepinski <a@kepinski.me> (https://kepinski.me)",
  "license": "MIT",
  "devDependencies": {
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.6.0",
    "jest-styled-components": "^6.3.1",
    "react-test-renderer": "^16.6.1",
    "stylelint": "^9.8.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.5.0",
    "xo": "^0.23.0"
  },
  "dependencies": {
    "consola": "^2.2.4",
    "fontfaceobserver": "^2.0.13",
    "next": "^7.0.2",
    "react": "^16.6.1",
    "styled-components": "^4.0.3"
  },
  "xo": {
    "extends": "xo-react",
    "envs": "browser",
    "esnext": true,
    "ignores": [
      "test",
      "pages/_document.js",
      "pages/index.js",
      "pages/home.js"
    ],
    "rules": {
      "react/no-unescaped-entities": null
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
